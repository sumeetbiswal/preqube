{% block paragraph %}

    {% block content %}

			<div class="panel panel-default">
				
				<div class="panel-heading">
					<h4 class="panel-title">
						<a data-toggle="collapse" data-parent="#accordion" href="#collapse-{{paragraph.id()}}" class="collapsed">
							<i class="icon-down-open-1 control-icon"></i>
							<i class="{{ content.field_title_icon|render|striptags|trim }}"></i> {{ content.field_title|render|striptags|trim }}
						</a>
					</h4>
				</div>
				
				<div id="collapse-{{paragraph.id()}}" class="panel-collapse collapse">
					<div class="panel-body">{{ content.field_description }}</div>
				</div>
			</div>
			
			 
    {% endblock %}
  
{% endblock paragraph %}